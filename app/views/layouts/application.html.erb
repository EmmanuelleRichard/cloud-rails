<!DOCTYPE html>
<html>
<head>
  <title>AurumCloud</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <% if user_signed_in? %>
      <div class="avatar" style="background-image: url(<%= current_user.avatar.url %>);">
      </div>
      <span class="email"><%= current_user.email  %></span>
     <p style="float: right; margin-right: 2%">
      <%= link_to destroy_user_session_path, :method => :delete do%> 
            <%= image_tag "power.svg", :class => "icone" %>
      <%end%>
    </p>
    <p style="float: right; margin-right: 2%">
      <%= link_to edit_user_registration_path do%> 
            <%= image_tag "cog.svg", :class => "icone" %>
      <%end%>
    </p>
  <%end%>
</header>
 
<%= yield %>
<script src="https://use.typekit.net/afb7zux.js"></script>
<script>try{Typekit.load({ async: true });}catch(e){}</script>

</body>
</html>

